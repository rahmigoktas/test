<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Uygulama varsayılan teması (gerekirse) -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Tema ayarları -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#03DAC5</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">#FF5722</item> <!-- Arka Plan Rengi -->
        <item name="android:textColor">#000000</item> <!-- Yazı Rengi -->
        <item name="android:textSize">34sp</item> <!-- Yazı Boyutu -->
    </style>

    <!-- Hesap makinesi butonları için stil -->
    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">34sp</item>
        <item name="android:background">#DDDDDD</item>
    </style>

</resources>